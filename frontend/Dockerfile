FROM node:22.3.0

WORKDIR /usr/src/app

ARG REACT_APP_API_RAKUTEN
ARG REACT_APP_API_AEON
ARG REACT_APP_API_CASH
ARG REACT_APP_API

ENV REACT_APP_API_RAKUTEN=$REACT_APP_API_RAKUTEN
ENV REACT_APP_API_AEON=$REACT_APP_API_AEON
ENV REACT_APP_API_CASH=$REACT_APP_API_CASH
ENV REACT_APP_API=$REACT_APP_API

COPY package*.json ./

RUN npm install

EXPOSE 3000

CMD [ "npm", "run", "dev" ]